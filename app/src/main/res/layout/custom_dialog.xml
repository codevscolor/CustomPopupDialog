<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/tv_imageview"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_battery_alert" />

    <TextView
        android:id="@+id/tv_low_battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv_imageview"
        android:layout_centerHorizontal="true"
        android:text="Low battery level"
        android:textSize="28sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/tv_low_battery"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Please plugged-in your phone to a power source"
        android:textSize="20sp"
        android:layout_marginBottom="30dp"/>
</RelativeLayout>